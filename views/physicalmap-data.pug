extends header

block content
  body
    .wrapper
      <!-- ******HEADER****** -->
      header.header
        .header-main.container
          h1.logo.col-md-4.col-sm-4
            a(href='https://sunflowergenome.org')
              img#logo(src='/images/logo.png', with='200px', height='75px', alt='Logo')
          .info.col-md-8.col-sm-8
            ul.menu-top.navbar-right.hidden-xs
              li.divider
                a(href='https://sunflowergenome.org') Home
              li.divider
                a(href='/faq') FAQ
              li
                a(href='/contact') Contact
            br
      include nav-data
      <!-- ******CONTENT****** -->
      .content.container
        .page-wrapper
          header.page-heading.clearfix
            h1.heading-title.pull-left Physical Map
            .breadcrumbs.pull-right
              ul.breadcrumbs-list
                li.breadcrumbs-label You are here:
                li
                  a(href='https://sunflowergenome.org') Home
                  i.fa.fa-angle-right
                li.current Physical Map files
          .page-content
           .row.page-row
            aside.page-sidebar.col-md-2.col-sm-2.affix-top
              section.widget
                ul.nav
                  li
                    a(href='/physicalmap') Procedures
                      |
                      |
                      i.fa.fa-book(aria-hidden='true')
                  li
                    a(href='/physicalmap-results') Statistics
                      |
                      |
                      i.fa.fa-bar-chart(aria-hidden='true')
                  li.active
                    a(href='/physicalmap-data') Files
                      |
                      |
                      i.fa.fa-download(aria-hidden='true')
            .events-wrapper.col-md-8.col-sm-7
              h2 Downloads
              .table-responsive
                table.table.table-hover.table-bordered
                  thead
                    tr
                      th Description
                      th Format
                      th Download
                  tbody
                    tr
                      td Whole Genome FPC Physical Map
                      td FPC
                      td
                        a.btn.btn-sm.btn-default(href='assets/data/physicalmap/WholeGenome_Decontaminated_E15_split.tar.gz')
                          span.glyphicon.glyphicon-cloud-download
                          |  Download
                    tr
                      td
                        | Physical-Genetic map integration and per Linkage Group (per LG) physical map construction
                      td FASTA
                      td
                        a.btn.btn-sm.btn-default(href='assets/data/physicalmap/perLG_PhysicalMaps.tar.gz')
                          span.glyphicon.glyphicon-cloud-download
                          |  Download

  include footer
